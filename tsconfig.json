{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@components/*": [
                "src/components/*"
            ],
            "@layouts/*": [
                "src/layouts/*"
            ],
            "@pages/*": [
                "src/pages/*"
            ],
            "@graphql/*": [
                "src/graphql/*"
            ],
            "@libs/*": [
                "src/libs/*"
            ],
            "@stores/*": [
                "src/stores/*"
            ],
            "@assets/*": [
                "src/assets/*"
            ],
            "@typings/*": [
                "src/typings/*"
            ]
        }
    }
}